/**index.wxss**/
view{
  box-sizing: border-box;
}
.container{
  background: #f5f5f5;
}
.swiperbox {
  width: 100%;
  height: 350rpx;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

/*商品  */
.goods-tit {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  padding-left: 25rpx;
  margin-top: 20rpx;
  background: #fff;
  font-weight: bold;
  border-left: 10rpx solid yellowgreen;
}

.goods-box{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  background: #fff;
}
.goods-box>view{
  width: 50%;
  margin: 10rpx 0;
}
.goods-box>view:nth-child(odd){
  padding-right: 5rpx;
}
.goods-box>view:nth-child(even){
  padding-left: 5rpx;
}
.goods-img{
  width: 100%;
  height: 375rpx;
}
.goods-name{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 29rpx;
  color: rgba(0,0,0,.87);
  padding-left: 30rpx;
}
.goods-show{
  font-size: 24rpx;
  color: rgba(0,0,0,.54);
  padding-left: 30rpx;
}
.goods-price{
  margin-top: 8rpx;
  font-size: 29rpx;
  color: #ea625b;
  padding-left: 30rpx;
}
