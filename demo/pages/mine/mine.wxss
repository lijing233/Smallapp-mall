/* pages/mine/mine.wxss */
view{
  box-sizing: border-box;
}
.container{
  padding: 80rpx 0 ;
  background-image: linear-gradient(-225deg, #E3FDF5 0%, #FFE6FA 100%);
  margin-bottom: 30rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}


.jumpbar{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx 0 30rpx;
  border-bottom: 1px solid #FFE6FA;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}
.jumpbar>image{
  width: 50rpx;
  height: 50rpx;
  background-size: 100%;
  vertical-align: middle;
  margin-bottom: 10rpx;
}
.jumpbar>text{
  height: 80rpx;
  line-height: 80rpx;
}
.arrow{
  float: right;
  width: 60rpx;
  height: 60rpx;
  margin-top: 10rpx;
}